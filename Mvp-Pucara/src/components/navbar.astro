<script>
  // Navbar optimizado con TypeScript para mayor seguridad
  interface NavbarElements {
    menuButton: HTMLButtonElement;
    mobileMenu: HTMLDivElement;
    overlay: HTMLDivElement;
    navbar: HTMLElement;
    logo: HTMLImageElement;
  }

  class NavbarController {
    private isMenuOpen: boolean = false;
    private scrollTicking: boolean = false;
    private isScrolled: boolean = false;
    private elements: NavbarElements | null = null;
    private isInitialized: boolean = false;

    constructor() {
      this.init();
    }

    private init(): void {
      // Múltiples estrategias de inicialización para mayor confiabilidad
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => this.safeInitNavbar());
      } else {
        // DOM ya está listo, inicializar inmediatamente
        this.safeInitNavbar();
      }

      // Reinicialización para Astro con múltiples eventos
      document.addEventListener('astro:page-load', () => {
        setTimeout(() => this.safeInitNavbar(), 50);
      });
      
      // Evento adicional para mayor compatibilidad
      window.addEventListener('load', () => {
        if (!this.isInitialized) {
          setTimeout(() => this.safeInitNavbar(), 100);
        }
      });
    }

    private safeInitNavbar(): void {
      // Prevenir múltiples inicializaciones
      if (this.isInitialized) {
        return;
      }

      // Intentar inicialización con retry
      let attempts = 0;
      const maxAttempts = 5;
      
      const tryInit = () => {
        attempts++;
        
        if (this.initNavbar()) {
          this.isInitialized = true;
          console.log('Navbar inicializado correctamente');
        } else if (attempts < maxAttempts) {
          // Retry después de un pequeño delay
          setTimeout(tryInit, 100 * attempts);
        } else {
          console.warn('Navbar: No se pudo inicializar después de múltiples intentos');
        }
      };
      
      tryInit();
    }

    private initNavbar(): boolean {
      // Cache elementos DOM con validación de tipos
      const menuButton = document.getElementById('mobile-menu-btn') as HTMLButtonElement;
      const mobileMenu = document.getElementById('mobile-menu') as HTMLDivElement;
      const overlay = document.getElementById('mobile-overlay') as HTMLDivElement;
      const navbar = document.getElementById('navbar') as HTMLElement;
      const logo = document.getElementById('navbar-logo') as HTMLImageElement;

      if (!menuButton || !mobileMenu || !overlay || !navbar || !logo) {
        console.warn('Navbar: Algunos elementos no encontrados, reintentando...');
        return false;
      }

      // Limpiar event listeners previos si existen
      if (this.elements) {
        this.cleanupEventListeners();
      }

      this.elements = { menuButton, mobileMenu, overlay, navbar, logo };

      // Estados iniciales
      this.closeMenuImmediate();
      this.updateScrollState(window.scrollY > 50);

      // Event listeners optimizados
      this.setupEventListeners();
      
      return true;
    }

    private cleanupEventListeners(): void {
      if (!this.elements) return;
      
      // Remover listeners previos para evitar duplicados
      const newMenuButton = this.elements.menuButton.cloneNode(true) as HTMLButtonElement;
      this.elements.menuButton.parentNode?.replaceChild(newMenuButton, this.elements.menuButton);
      
      const newOverlay = this.elements.overlay.cloneNode(true) as HTMLDivElement;
      this.elements.overlay.parentNode?.replaceChild(newOverlay, this.elements.overlay);
    }

    private setupEventListeners(): void {
      if (!this.elements) return;

      // Scroll con throttling optimizado
      window.addEventListener('scroll', () => this.handleScrollThrottled(), { passive: true });
      
      // Mobile menu button
      this.elements.menuButton.addEventListener('click', (e: MouseEvent) => {
        e.stopPropagation();
        this.toggleMenu();
      });

      // Overlay click
      this.elements.overlay.addEventListener('click', (e: MouseEvent) => {
        e.stopPropagation();
        this.closeMenu();
      });

      // Links móviles
      const mobileLinks = this.elements.mobileMenu.querySelectorAll('a');
      mobileLinks.forEach((link: Element) => {
        const linkElement = link as HTMLAnchorElement;
        linkElement.addEventListener('click', () => {
          setTimeout(() => this.closeMenu(), 100);
        });
      });

      // Keyboard navigation
      document.addEventListener('keydown', (e: KeyboardEvent) => {
        if (e.key === 'Escape' && this.isMenuOpen) {
          this.closeMenu();
        }
      });
    }

    // Throttled scroll handler con requestAnimationFrame
    private handleScrollThrottled(): void {
      if (!this.scrollTicking) {
        requestAnimationFrame(() => {
          const scrolled: boolean = window.scrollY > 50;
          
          // Solo actualizar si cambió el estado
          if (scrolled !== this.isScrolled) {
            this.updateScrollState(scrolled);
          }
          
          this.scrollTicking = false;
        });
        
        this.scrollTicking = true;
      }
    }

    // Actualización optimizada del estado de scroll
    private updateScrollState(scrolled: boolean): void {
      if (!this.elements) return;
      
      this.isScrolled = scrolled;
      
      const container = this.elements.navbar.querySelector('.flex.justify-between') as HTMLElement;
      
      if (scrolled) {
        // Estado comprimido con color naranja, altura de 80px y elementos centrados verticalmente
        this.elements.navbar.classList.add('!py-1', '!bg-primary-subtle/70', '!h-[80px]');
        this.elements.navbar.classList.remove('!bg-black/70');
        // Centrar solo verticalmente el contenedor interno
        if (container) {
          container.classList.add('!h-full', '!items-center');
        }
        this.elements.logo.classList.add('!h-[70px]', 'md:!h-[80px]', 'lg:!h-[90px]', 'xl:!h-[100px]');
      } else {
        // Estado normal
        this.elements.navbar.classList.remove('!py-1', '!bg-primary-subtle/70', '!h-[80px]');
        this.elements.navbar.classList.add('!bg-black/70');
        // Quitar el centrado vertical del contenedor interno
        if (container) {
          container.classList.remove('!h-full', '!items-center');
        }
        this.elements.logo.classList.remove('!h-[70px]', 'md:!h-[80px]', 'lg:!h-[90px]', 'xl:!h-[100px]');
      }
    }

    private toggleMenu(): void {
      if (this.isMenuOpen) {
        this.closeMenu();
      } else {
        this.openMenu();
      }
    }

    private openMenu(): void {
      if (!this.elements || this.isMenuOpen) return;

      this.isMenuOpen = true;

      // Batch DOM updates para mejor performance
      this.elements.mobileMenu.style.transform = 'translateX(0)';
      this.elements.overlay.style.opacity = '1';
      this.elements.overlay.style.pointerEvents = 'auto';
      this.elements.menuButton.classList.add('active');
      this.elements.menuButton.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }

    private closeMenu(): void {
      if (!this.elements || !this.isMenuOpen) return;

      this.isMenuOpen = false;

      // Batch DOM updates para mejor performance
      this.elements.mobileMenu.style.transform = 'translateX(-100%)';
      this.elements.overlay.style.opacity = '0';
      this.elements.overlay.style.pointerEvents = 'none';
      this.elements.menuButton.classList.remove('active');
      this.elements.menuButton.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }

    private closeMenuImmediate(): void {
      if (!this.elements) return;

      this.isMenuOpen = false;
      this.elements.mobileMenu.style.transform = 'translateX(-100%)';
      this.elements.overlay.style.opacity = '0';
      this.elements.overlay.style.pointerEvents = 'none';
      this.elements.menuButton.classList.remove('active');
      this.elements.menuButton.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }
  }

  // Inicializar el controlador del navbar
  new NavbarController();
</script>

