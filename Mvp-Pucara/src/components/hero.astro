---
// Hero component responsive - Solo imagen optimizada
---

<section class="relative w-full overflow-hidden">
  <!-- Hero Container con altura responsiva -->
  <div class="relative h-[50vh] sm:h-[55vh] md:h-[60vh] lg:h-[65vh] xl:h-[70vh] w-full">
    
    <!-- Background Image responsive -->
    <div class="absolute inset-0">
      <picture>
        <!-- Imagen optimizada para móvil -->
        <source media="(max-width: 768px)" 
                srcset="/pucarahero.png" />
        <!-- Imagen para tablet y desktop -->
        <source media="(min-width: 769px)" 
                srcset="/pucarahero.png" />
        <!-- Fallback -->
        <img src="/pucarahero.png" 
             alt="Pucará Gaming Hero" 
             class="w-full h-full object-cover object-center" 
             loading="eager" />
      </picture>
    </div>
  </div>
</section>