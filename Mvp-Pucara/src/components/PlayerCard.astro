---
export interface Props {
  nombre: string;
  edad: number;
  nacionalidad: string;
  rol: string;
  instagram: string;
  imagen: string;
}

const { nombre, edad, nacionalidad, rol, instagram, imagen } = Astro.props;
---

<article class="group bg-gradient-to-br from-dark/80 to-gray-800/90 rounded-2xl p-6 border border-primary/20 hover:border-primary/50 transition-all duration-300 hover:-translate-y-1 shadow-lg hover:shadow-xl relative overflow-hidden animate-fade-in h-full flex flex-col" 
         role="article"
         aria-labelledby={`player-${nombre.replace(/\s+/g, '-').toLowerCase()}`}>
    <!-- Contenido centrado verticalmente -->
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center">
        <!-- Avatar del jugador -->
        <div class="w-28 h-28 mb-4 rounded-full overflow-hidden border-2 border-primary/60 shadow-md group-hover:border-primary transition-all duration-300 flex-shrink-0">
            <img 
                src={imagen} 
                alt={`Foto de perfil de ${nombre}, ${rol} de Pucar치 Gaming`} 
                width="112" 
                height="112"
                loading="lazy"
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" 
            />
        </div>
        
        <!-- Info del jugador -->
        <div class="flex flex-col items-center justify-center flex-grow">
            <h3 id={`player-${nombre.replace(/\s+/g, '-').toLowerCase()}`} 
                class="text-lg font-bold text-light uppercase tracking-wide mb-2 group-hover:text-primary transition-colors duration-300">
                {nombre}
            </h3>
            <p class="text-primary font-semibold text-sm uppercase tracking-wide mb-1" 
               aria-label={`Rol: ${rol}`}>{rol}</p>
            <p class="text-light/80 font-medium mb-2" 
               aria-label={`Edad: ${edad} a침os`}>{edad} a침os</p>
            <p class="text-light/80 mb-4" 
               aria-label={`Nacionalidad: ${nacionalidad}`}>{nacionalidad}</p>
            
            <!-- Bot칩n Instagram -->
            <a href={`https://instagram.com/${instagram}`} 
               target="_blank" 
               rel="noopener noreferrer"
               class="inline-flex items-center gap-2 text-primary font-semibold text-sm py-2 px-4 border border-primary/60 rounded-full hover:bg-primary/10 hover:border-primary transition-all duration-300 mt-auto focus-visible"
               aria-label={`Seguir a ${nombre} en Instagram (@${instagram})`}>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" role="img" aria-labelledby={`instagram-icon-${nombre.replace(/\s+/g, '-').toLowerCase()}`}>
                    <title id={`instagram-icon-${nombre.replace(/\s+/g, '-').toLowerCase()}`}>Icono de Instagram</title>
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                @{instagram}
            </a>
        </div>
    </div>
</article>
